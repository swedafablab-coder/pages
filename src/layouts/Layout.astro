---
import Side from "../components/Side.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { Luminous, LuminousGallery } from "luminous-lightbox";
import "luminous-lightbox/dist/luminous-basic.min.css";
import { ClientRouter } from "astro:transitions";

export interface Props {
  title: string;
  titleSuffix?: string;
  frontmatter?: {
    title: string;
    titleSuffix?: string;
  };
}
const { frontmatter } = Astro.props;
const title = frontmatter?.title || Astro.props.title;
const titleSuffix = frontmatter?.titleSuffix || Astro.props.titleSuffix;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/wasurena.gif" type="image/x-icon" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <div class="box">
      <div class="site-container">
        <Header titleSuffix={titleSuffix} />

        <div class="content-wrapper">
          <main class="main-content">
            <slot />
          </main>
          <div class="sidebar">
            <Side />
          </div>
        </div>
        <Footer />
      </div>
    </div>
    <script>
      import { LuminousGallery } from "luminous-lightbox";

      document.addEventListener("astro:page-load", () => {
        // ページ内のすべてのarticle要素を取得
        const articles = document.querySelectorAll("article");

        // article要素ごとにループ処理
        articles.forEach((article) => {
          // そのarticle内にあるluminousクラスを持つ要素だけを取得
          const luminousElems = Array.from(
            article.querySelectorAll(".luminous")
          ) as HTMLElement[];

          // 要素が存在する場合、それらだけでギャラリーを初期化
          if (luminousElems.length > 0) {
            new LuminousGallery(luminousElems);
          }
        });
      });
    </script>
  </body>
</html>
